{
    "id": "file:///var/lib/irods/configuration_schemas/v4/zone_bundle.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "description": "Schema for an iRODS zone bundle (possibly featuring Federation)",
    "properties": {
        "schema_version": {"type": "string"},
        "zones": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "servers": {
                        "type": "array",
                        "items": {
                            "$ref": "server.json"
                        }
                    }
                },
                "required": ["servers"]
            }
        }
    },
    "required": ["schema_version", "zones"]
}
